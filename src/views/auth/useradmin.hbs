<div class="container p-4">
    <div class="m-4">

    <form class="form-inline md-form form-sm mt-0" action="/user/search" method="POST">
        <i class="fas fa-search" aria-hidden="true"></i>
        <input class="form-control form-control-sm ml-3 w-75 " type="text" placeholder="Search" aria-label="Search" id="username" name="username">
        <button class="btn btn-primary aqua-gradient btn-rounded" type="submit">Search</button>
    </form>
    </div>
    <div class="row">
        {{#each usuarios}}
            <div class="col-md-3">
               <div class="card text-center">
                   <div class="card-body">
                           <h3 class="card-title text-uppercase">
                               {{name}}
                           </h3> 
                           <h3>{{surname}}</h3>   
                       <small>nivel de acceso {{level_users}}</small>
                       <p class="m-2">{{email}}</p>
                       <p>{{phone}}</p>

                       <a href="/deleteuser/{{id_user}}" class="btn btn-danger">Delete user</a>
                       <a href="/edituser/{{id_user}}" class="btn btn-secondary">Edit</a>                       
                   </div>
               </div> 
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Aun no hay usuarios guardados</p>
                    <a href="/signup">Crear una nueva tarjeta</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>