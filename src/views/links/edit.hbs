<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
          <div class="card text-center">
            <h2>Agregar acceso</h2>
            <form action="/links/actualizar/{{link.id_dashboard}}/" method="POST">
            
            <ul class="list-group">
              {{#each user}}
      
                <li class="list-group-item"><button class="btn btn-success" type="submit" name="usuario" id="usuario" value="{{id_user}}">{{username}}</button></li>
                
              {{/each}}
            </ul>
            
            </form>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-center">
            <h2>quitar acceso</h2>
            <form action="/links/eliminar/{{link.id_dashboard}}/" method="POST">
            <ul class="list-group">
              {{#each dash_user}}
                <li class="list-group-item"><button class="btn btn-danger" type="submit" name="dashboard" id="dashboard" value="{{id_user}}">{{username}}</button></li>
              {{/each}}
            </ul>
            </form>
          </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <h3 class="p-4">Editar dashboard</h3>
                <div class="card-body">
                    <form action="/links/edit/{{link.id_dashboard}}" method="POST">
                        <div class="form-group">
                          {{!--<label for="">Titulo</label>--}}
                          <input type="text" value="{{link.title}}" name="title" id="title" class="form-control" aria-describedby="helpId" autofocus>
                          <small id="helpId" class="text-muted">Titulo de dashboard</small>
                        </div>

                        <div class="form-group">
                          {{!--<label for="">URL</label>--}}
                          <input type="text" value="{{link.url}}" name="url" id="url" class="form-control" aria-describedby="helpIdURL">
                          <small id="helpIdURL" class="text-muted">URL del link</small>
                        </div>

                        <div class="form-group">
                          {{!--<label for="">Descripcion</label>--}}
                          <textarea  name="description" rows="2" class="form-control" placeholder="descripcion">{{link.description}}</textarea>
                          <small id="helpIdURL" class="text-muted">URL del link</small>
                        </div>

                        <div class="form-group">
                          {{!--<label for="">URL</label>--}}
                          <input type="number" value="{{link.level_dashboards}}" name="level_dashboards" id="level_dashboards" class="form-control" aria-describedby="helpIdURL">
                          <small id="helpIdURL" class="text-muted">Nivel de acceso</small>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>