<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
              <div class="card-header">
                    <img src="img/logo.png" alt="logo RUV" class="card-img mx-auto m-2 rounded-square w-50">   
                </div>
                <h3 class="p-4">Agregar un dashboard</h3>
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                          {{!--<label for="">Titulo</label>--}}
                          <input type="text" name="title" id="title" class="form-control" placeholder="Title" aria-describedby="helpId" autofocus>
                          <small id="helpId" class="text-muted">Titulo de dashboard</small>
                        </div>

                        <div class="form-group">
                          {{!--<label for="">URL</label>--}}
                          <input type="text" name="url" id="url" class="form-control" placeholder="URL" aria-describedby="helpIdURL">
                          <small id="helpIdURL" class="text-muted">URL del link</small>
                        </div>

                        <div class="form-group">
                          {{!--<label for="">Descripcion</label>--}}
                          <textarea name="description" rows="2" class="form-control" placeholder="descripcion"></textarea>
                          <small id="helpIdURL" class="text-muted">URL del link</small>
                        </div>

                        <div class="form-group">
                          {{!--<label for="">URL</label>--}}
                          <input type="number" name="level_dashboards" id="level_dashboards" class="form-control" placeholder="(1 mas bajo - 5 mas alto)" aria-describedby="helpIdURL">
                          <small id="helpIdURL" class="text-muted">Nivel de acceso</small>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>